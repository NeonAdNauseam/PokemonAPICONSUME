---
const { siteTitle = "My Site" } = Astro.props;
---

<header class="site-header">
  <div class="header-content">
    <h1 class="site-title">{siteTitle}</h1>
    <nav class="site-nav">
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/about">About</a></li>
        <li><a href="/projects">Projects</a></li>
      </ul>
    </nav>
  </div>
</header>

<style>
  :root {
    --header-bg: hsl(0, 0%, 100%);
    --header-text: hsl(0, 0%, 10%);
    --header-accent: hsl(220, 100%, 60%);
  }

  .site-header {
    background-color: var(--header-bg);
    padding: 1rem 2rem;
    border-bottom: 1px solid var(--header-accent);
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }

  .site-title {
    font-size: 1.5rem;
    color: var(--header-text);
    margin: 0;
  }

  .site-nav ul {
    list-style: none;
    display: flex;
    gap: 1rem;
    margin: 0;
    padding: 0;
  }

  .site-nav a {
    color: var(--header-text);
    text-decoration: none;
    font-weight: 500;
  }

  .site-nav a:hover {
    color: var(--header-accent);
  }
</style>
